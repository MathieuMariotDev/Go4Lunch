<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/restaurant_name"
            android:layout_width="@dimen/textview_width"
            android:layout_height="30dp"
            android:text="@string/restaurant_name_error"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/restaurant_addresse"
            android:layout_width="@dimen/textview_width"
            android:layout_height="22dp"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:text="@string/addresse_restaurant_error"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/restaurant_name" />

        <TextView
            android:id="@+id/restaurant_opening_hours"
            android:layout_width="@dimen/textview_width"
            android:layout_height="18dp"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:text="@string/opening_hours_error"
            android:textSize="12sp"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/restaurant_addresse" />

    <TextView
        android:id="@+id/restaurant_distance"
        android:layout_width="40dp"
        android:layout_height="22dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:text="@string/restaurant_distance_error"
        app:layout_constraintEnd_toStartOf="@+id/restaurant_picture"
        app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/restaurant_workmate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="16dp"
            android:text="@string/nb_workmate_error"
            app:layout_constraintBottom_toTopOf="@+id/ic_rating"
            app:layout_constraintEnd_toStartOf="@+id/restaurant_picture" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/ic_baseline_group_24"
            app:layout_constraintBottom_toTopOf="@+id/ic_rating"
            app:layout_constraintEnd_toStartOf="@+id/restaurant_workmate" />

    <ImageView
        android:id="@+id/ic_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:src="@drawable/ic_baseline_star_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/restaurant_picture" />

    <ImageView
        android:id="@+id/ic_rating1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_star_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ic_rating" />

    <ImageView
        android:id="@+id/ic_rating2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_star_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ic_rating1" />

        <ImageView
            android:id="@+id/restaurant_picture"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_marginEnd="4dp"
            android:src="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.491" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>