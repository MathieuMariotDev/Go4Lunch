<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <ImageView
        android:id="@+id/imageView_picture_restaurant"
        android:layout_width="413dp"
        android:layout_height="265dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView_info_restaurant"
        android:layout_width="406dp"
        android:layout_height="86dp"
        android:layout_marginTop="4dp"
        android:background="#DC143C"
        android:text="Nom restaurant \nType de restaurant - adresse restaurant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_picture_restaurant" />

    <ImageButton
        android:id="@+id/imageButton_choose"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_picture_restaurant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.92"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/imageButton_phone"
        android:layout_width="146dp"
        android:layout_height="95dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/fui_ic_phone_white_24dp"
        app:layout_constraintEnd_toStartOf="@+id/imageButton_"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_info_restaurant" />

    <ImageButton
        android:id="@+id/imageButton_"
        android:layout_width="132dp"
        android:layout_height="95dp"
        android:layout_marginTop="4dp"
        android:src="@android:drawable/btn_star"
        app:layout_constraintEnd_toStartOf="@+id/imageButton_web"
        app:layout_constraintTop_toBottomOf="@+id/textView_info_restaurant" />

    <ImageButton
        android:id="@+id/imageButton_web"
        android:layout_width="127dp"
        android:layout_height="93dp"
        android:layout_marginTop="8dp"
        android:src="@android:drawable/ic_menu_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_info_restaurant" />
</androidx.constraintlayout.widget.ConstraintLayout>