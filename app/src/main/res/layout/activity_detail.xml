<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <ImageView
        android:id="@+id/imageView_picture_restaurant"
        android:layout_width="413dp"
        android:layout_height="265dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/imageButton_choose"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_baseline_check_circle_24"
        app:borderWidth="0dp"
        app:fabCustomSize="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_info_restaurant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.955"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.798" />

    <TextView
        android:id="@+id/textView_name_restaurant"
        android:layout_width="411dp"
        android:layout_height="36dp"
        android:background="@color/colorPrimary"
        android:padding="6dp"
        android:text="Nom restaurant \n"
        android:textColor="@color/colorAccent"
        android:textSize="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_picture_restaurant" />

    <TextView
        android:id="@+id/textView_info_restaurant"
        android:layout_width="414dp"
        android:layout_height="51dp"
        android:background="@color/colorPrimary"
        android:padding="6dp"
        android:paddingBottom="32dp"
        android:text="Type de restaurant - adresse restaurant"
        android:textColor="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_name_restaurant" />

    <Button
        android:id="@+id/imageButton_phone"
        android:layout_marginTop="12dp"
        android:layout_width="146dp"
        android:layout_height="95dp"
        android:background="#FFFFFF"
        android:tint="@color/colorPrimary"
        android:text="CALL"
        android:textColor="@color/colorPrimary"
        android:drawableTop="@drawable/ic_baseline_phone_24"
        app:layout_constraintEnd_toStartOf="@+id/imageButton_"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_info_restaurant" />

    <Button
        android:id="@+id/imageButton_"
        android:layout_marginTop="12dp"
        android:layout_width="132dp"
        android:layout_height="95dp"
        android:drawableTop="@drawable/ic_baseline_star_24"
        android:text="LIKE"
        android:background="#FFFFFF"
        android:textColor="@color/colorPrimary"
        android:tint="@color/colorPrimary"
        app:layout_constraintEnd_toStartOf="@+id/imageButton_web"
        app:layout_constraintTop_toBottomOf="@+id/textView_info_restaurant" />

    <Button
        android:id="@+id/imageButton_web"
        android:layout_marginTop="12dp"
        android:text="WEBSITE"
        android:tint="@color/colorPrimary"
        android:drawableTop="@drawable/ic_terre"
        android:textColor="@color/colorPrimary"
        android:layout_width="127dp"
        android:layout_height="93dp"
        android:background="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_info_restaurant" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_workmates_detail"
        android:layout_width="320dp"
        android:layout_height="200dp"
        android:layout_marginTop="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton_"
        app:layout_constraintVertical_bias="0.0"
        tools:listitem="@layout/item_workmate"></androidx.recyclerview.widget.RecyclerView>
</androidx.constraintlayout.widget.ConstraintLayout>